{
    "name": "sy-records/simps",
    "description": "A swoole-based coroutine framework, simple yet elegant.",
    "type": "library",
    "license": "Apache-2.0",
    "keywords": [
        "php",
        "swoole",
        "coroutine",
        "simple"
    ],
    "authors": [
        {
            "name": "Luffy",
            "email": "52o@qq52o.cn"
        }
    ],
    "require": {
        "php": ">=7.2",
        "ext-swoole": ">=4.4",
        "nikic/fast-route": "^1.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.9"
    },
    "bin": [
        "bin/simps"
    ],
    "autoload": {
        "psr-4": {
            "Simps\\": "src/"
        },
        "files": ["src/functions.php"]
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "cs-fix": "php-cs-fixer fix $1"
    }
}

